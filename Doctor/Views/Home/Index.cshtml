@{
    ViewBag.Title = "Home Page";
}

@*<link rel="stylesheet" href="~/Style/css/indexhome.css" />*@
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">


        <div class="item active">
            <img src="~/Style/images/1.jpg" alt="ASP.NET" class="image" />

            <div class="carousel-caption" role="option">
                @if (Session["ID"] == null)
                {
                    @Html.ActionLink("Vezi lista pacienti", "Conectare", "Inregistrare")



                    @Html.ActionLink("Adauga un pacient", "Conectare", "Inregistrare")
                }
                else
                {
                    @Html.ActionLink("Vezi lista pacienti", "Index", "Pacients")



                    @Html.ActionLink("Adauga un pacient", "Adaugare", "AdaugarePacient")
                }


            </div>
        </div>
        <div class="item">
            <img src="~/Style/images/2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">

                @if (Session["ID"] == null)
                {
                    @Html.ActionLink("Vezi lista pacienti", "Conectare", "Inregistrare")



                    @Html.ActionLink("Adauga un pacient", "Conectare", "Inregistrare")
                }
                else
                {
                    @Html.ActionLink("Vezi lista pacienti", "Index", "Pacients")



                    @Html.ActionLink("Adauga un pacient", "Adaugare", "AdaugarePacient")
                }

            </div>
        </div>
        <div class="item">
            <img src="~/Style/images/3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                @if (Session["ID"] == null)
                {
                    @Html.ActionLink("Vezi lista pacienti", "Conectare", "Inregistrare")



                    @Html.ActionLink("Adauga un pacient", "Conectare", "Inregistrare")
                }
                else
                {
                    @Html.ActionLink("Vezi lista pacienti", "Index", "Pacients")



                    @Html.ActionLink("Adauga un pacient", "Adaugare", "AdaugarePacient")
                }
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<style>

    #myCarousel {
        height: 100vh;
        background-size: cover;
        background-position: center;
    }
    
    .item {
        height: 100vh;
        background-size: cover;
        background-position: center;
    }

    .image {
        background-size: cover;
    }

    .carousel-caption {
        margin-bottom: 15%; /*200px;*/
        color:aquamarine;
    }

        .carousel-caption a {
            text-decoration: none;
            padding: 2%; /*15*/
            background-color: lawngreen;
            color: black;
            border-radius: 5px 5px 5px 5px;
            border: 1px solid black;
            margin: 2px;
            
        }

            .carousel-caption a:hover {
                border: 1px solid black;
            }

    .item active {
        width: 100%;
    }

    .item img {
        width: 100%;
    }
</style>
